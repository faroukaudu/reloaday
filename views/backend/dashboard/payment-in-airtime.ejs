<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Receipt</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <style>

    :root{
  --brand:#6f42c1;
  --brand2:#00b3a4;
  --bg:#f6f7fb;
  --ink:#111;
  --muted:#667085;
  --card:#ffffff;
  --line:#e6e8ef;
  --success:#16a34a;
  --successBg:#dcfce7;
  --danger:#dc2626;
  --dangerBg:#fee2e2;
}

* { box-sizing: border-box; }

body { font-family: Arial, sans-serif; margin: 0; background: var(--bg); color: var(--ink); }
.wrap { max-width: 820px; margin: 0 auto; padding: 22px; }

.header {
  background: linear-gradient(90deg, var(--brand), var(--brand2));
  color: #fff;
  border-radius: 14px;
  padding: 18px 18px;
  display:flex;
  justify-content:space-between;
  align-items:center;
  gap: 14px;
  flex-wrap: wrap; /* ✅ allow wrap */
  box-shadow: 0 10px 24px rgba(17,24,39,0.12);
}

.brand { font-weight: 800; letter-spacing: .4px; font-size: 18px; }
.sub { opacity:.9; font-size: 12px; margin-top: 2px; }

.btns { display:flex; gap:10px; flex-wrap: wrap; } /* ✅ wraps on small screens */
.btn {
  padding: 10px 14px;
  border-radius: 10px;
  border: 1px solid rgba(255,255,255,0.35);
  background: rgba(255,255,255,0.12);
  color: #fff;
  cursor: pointer;
  font-weight: 600;
  text-decoration: none;
  display:inline-flex;
  align-items:center;
  justify-content:center;
  min-width: 120px;
}

.card {
  margin-top: 14px;
  background: var(--card);
  border: 1px solid var(--line);
  border-radius: 14px;
  padding: 18px;
  box-shadow: 0 10px 22px rgba(16,24,40,0.06);
}

.metaTop {
  display:flex;
  justify-content:space-between;
  align-items:flex-start;
  gap: 12px;
  flex-wrap: wrap; /* ✅ prevents overflow */
  margin-bottom: 10px;
}

.pill {
  display:inline-block;
  padding: 6px 10px;
  border-radius: 999px;
  font-size: 12px;
  font-weight: 700;
  border: 1px solid transparent;
  white-space: nowrap;
}
.pill.success { color: var(--success); background: var(--successBg); border-color: #86efac; }
.pill.failed  { color: var(--danger); background: var(--dangerBg); border-color: #fecaca; }

.grid { display:grid; grid-template-columns: 1fr 1fr; gap: 12px 18px; margin-top: 12px; }

.box {
  border: 1px solid var(--line);
  border-radius: 12px;
  padding: 12px 12px;
  background: #fff;
}

.label { font-size: 12px; color: var(--muted); margin-bottom: 6px; }
.value { font-size: 14px; font-weight: 700; color: var(--ink); word-break: break-word; }

.totalBox {
  border: 1px solid rgba(111,66,193,0.25);
  background: linear-gradient(180deg, rgba(111,66,193,0.09), rgba(0,179,164,0.06));
}
.total { font-size: 20px; font-weight: 900; color: #0b3b38; }

.foot { margin-top: 14px; font-size: 12px; color: var(--muted); text-align:center; }

/* ✅ MOBILE BREAKPOINT */
@media (max-width: 640px) {
  .wrap { padding: 14px; }
  .grid { grid-template-columns: 1fr; }        /* ✅ one column on phones */
  .btn { width: 100%; min-width: unset; }      /* ✅ full width buttons */
  .brand { font-size: 16px; }
  .card { padding: 14px; }
}

/* Print rules */
@media print {
  body { background: #fff; }
  .wrap { max-width: 100%; padding: 0; }
  .btns { display: none !important; }
  .header { border-radius: 0; box-shadow: none; }
  .card { border: none; box-shadow: none; }
  .box { border-color: #ddd; }
  .foot { margin-top: 8px; }
}
