<body>
  <%
    // ======= DATA MAPPING FROM YOUR EXISTING VARIABLES =======
    const name = (userInfo && (userInfo.firstname || userInfo.lastname))
      ? `${userInfo.firstname || ""} ${userInfo.lastname || ""}`.trim()
      : "-";

    const email = (userInfo && (userInfo.email || userInfo.useremail)) ? (userInfo.email || userInfo.useremail) : "-";
    const phone = planInfo && planInfo.mobile_number ? planInfo.mobile_number : (userInfo && userInfo.phone ? userInfo.phone : "-");

    // Plan label: prefer plan_name, else plan_network
    const plan = planInfo
      ? `${planInfo.plan_network || ""}${planInfo.plan_name ? " - " + planInfo.plan_name : ""}`.trim()
      : "-";

    // Date formatting
    const rawDate = planInfo && planInfo.create_date ? planInfo.create_date : null;
    const d = rawDate ? new Date(rawDate) : null;
    const dateStr = (!d || isNaN(d.getTime()))
      ? (rawDate || "-")
      : d.toLocaleString("en-GB", {
          year: "numeric", month: "short", day: "2-digit",
          hour: "2-digit", minute: "2-digit", second: "2-digit",
          hour12: true,
          timeZone: "Africa/Lagos"
        });

    const statusRaw = (planInfo && planInfo.Status) ? String(planInfo.Status) : "successful";
    const isSuccess = statusRaw.toLowerCase().includes("success");

    const orderId = planInfo && planInfo.ident ? planInfo.ident : "-";
    const amountNum = Number(amount || 0);
  %>

  <div class="wrap">

    <div class="header">
      <div>
        <div class="brand">RELOADAY</div>
        <div class="sub">Payment Receipt</div>
      </div>

      <div class="btns">
        <!-- Update this link to wherever “Buy Again” should go -->
        <a class="btn" href="/data">Buy Again</a>
        <button class="btn" type="button" onclick="window.print()">Print</button>
      </div>
    </div>

    <div class="card">
      <div class="metaTop">
        <div class="label">Receipt Summary</div>
        <span class="pill <%= isSuccess ? 'success' : 'failed' %>">
          <%= isSuccess ? 'Successful' : 'Failed' %>
        </span>
      </div>

      <div class="grid">
        <div class="box">
          <div class="label">Name</div>
          <div class="value"><%= name %></div>
        </div>

        <div class="box">
          <div class="label">Email</div>
          <div class="value"><%= email %></div>
        </div>

        <div class="box">
          <div class="label">Phone</div>
          <div class="value"><%= phone %></div>
        </div>

        <div class="box">
          <div class="label">Date</div>
          <div class="value"><%= dateStr %></div>
        </div>

        <div class="box">
          <div class="label">Order ID</div>
          <div class="value"><%= orderId %></div>
        </div>

        <div class="box totalBox">
          <div class="label">Total Amount</div>
          <div class="value total">₦ <%= amountNum.toLocaleString("en-NG", { minimumFractionDigits: 2 }) %></div>
        </div>

        <div class="box">
          <div class="label">Network</div>
          <div class="value"><%= planInfo && planInfo.plan_network ? planInfo.plan_network : "-" %></div>
        </div>

        <div class="box">
          <div class="label">Plan</div>
          <div class="value"><%= planInfo && planInfo.plan_name ? planInfo.plan_name : plan %></div>
        </div>

        <div class="box">
          <div class="label">Duration</div>
          <div class="value"><%= planInfo && planInfo.duration ? planInfo.duration : "-" %></div>
        </div>

        <div class="box">
          <div class="label">Status Text</div>
          <div class="value"><%= statusRaw %></div>
        </div>
      </div>
      
      <!-- <p >Cancel</p> -->
      <a  href="/dashboard"><p style="text-align: right;">Cancel</p></a>
      
    </div>

    <div class="foot">
      This receipt is system-generated. Keep it for your records.
    </div>

  </div>
