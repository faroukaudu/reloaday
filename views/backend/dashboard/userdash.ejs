<%- include("../../includes/dash/head", {userInfo:userInfo}); -%>

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">
        <div class="page-body">
          <div class="row">

            <!-- statustic-card start -->
            <div class="col-md-6 col-xl-4" style="margin-top: -5px;">
              <div class="card user-widget-card bg-c-green">
                <div class="card-block">
                  <i class="zmdi zmdi-balance-wallet bg-simple-c-green card1-icon f-40"></i>
                  <h4 style="margin-top:50px; font-size:30px; font-weight:600">
                    ₦ <%= userInfo.wallet_balace.toLocaleString('en-US') %>
                  </h4>
                  <p style="margin-bottom:50px; font-style:oblique; font-size:larger;">Wallet Balance</p>
                  <a href="/fund-wallet" class="more-info">Fund Wallet</a>
                </div>
              </div>
            </div>

            <div class="col-md-12 col-lg-4">
              <div class="card">
                <div class="card-block text-center">
                  <i class="icofont icofont-smart-phone text-c-lite-green f-40"></i>
                  <h4 class="m-t-20"><span class="text-c-lite-green">200</span> Airtime Point</h4>
                  <p class="m-b-20">Buy Airtime to gain Reward Points</p>
                  <a href="/airtime" class="btn btn-primary btn-sm btn-round">Buy Airtime</a>
                </div>
              </div>
            </div>

            <div class="col-md-6 col-lg-4">
              <div class="card">
                <div class="card-block text-center">
                  <i class="icofont icofont-globe-alt text-c-pink f-40"></i>
                  <h4 class="m-t-20">Data Plan</h4>
                  <p class="m-b-20">Subscribe Data to gain Data points</p>
                  <a href="/data" class="btn btn-danger btn-sm btn-round">Buy Data</a>
                </div>
              </div>
            </div>
            <!-- statustic-card end -->

            <div class="col-xl-12 col-md-12">
              <!-- Zero config.table start -->
              <div class="card">
                <div class="card-header">
                  <h5>Activities</h5>
                </div>
                <div class="card-block">
                  <div class="dt-responsive table-responsive">
                    <table id="simpletable" class="table table-striped table-bordered nowrap">
                      <thead>
                        <tr>
                          <th>Payment Method</th>
                          <th>Transaction ID</th>
                          <th>Description</th>
                          <th>Amount</th>
                          <th>Date</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% deposit.forEach(function(depo){ 
                             const d = new Date(depo.date);
                             const dateStr = isNaN(d.getTime()) ? "-" : d.toISOString().replace("T"," ").replace("Z"," UTC");
                        %>
                          <tr>
                            <td><%= depo.paymentMeth %></td>
                            <td><%= depo.transactionRef %></td>
                            <td><%= depo.paymentDesc %></td>
                            <td>₦ <%= Number(depo.amountPaid).toLocaleString('en-NG') %></td>
                            <td><%= dateStr %></td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <!-- Zero config.table end -->
            </div>

            <!-- income start -->
            <div class="col-sm-12">
              <div class="card">
                <div class="card-header">
                  <h5>Ads</h5>
                </div>

                <div class="card-block">
                  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    </ol>

                    <div class="carousel-inner" role="listbox">
                      <div class="carousel-item active">
                        <img class="d-block img-fluid w-100" src="..\dash-assets\assets\images\slider\slide1.jpg" alt="First slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block img-fluid w-100" src="..\dash-assets\assets\images\slider\slide2.jpg" alt="Second slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block img-fluid w-100" src="..\dash-assets\assets\images\slider\slide3.jpg" alt="Third slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block img-fluid w-100" src="..\dash-assets\assets\images\slider\slide4.jpg" alt="Fourth slide">
                      </div>
                    </div>

                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>

                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <!-- income end -->

          </div><!-- /.row -->
        </div><!-- /.page-body -->
      </div><!-- /.page-wrapper -->
    </div><!-- /.main-body -->
  </div><!-- /.pcoded-inner-content -->
</div><!-- /.pcoded-content -->

